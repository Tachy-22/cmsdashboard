datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  slug     String    @unique
  title    String
  theme    String
  creator  User?      @relation(fields: [creatorId], references: [id])
  creatorId String?    @db.ObjectId
  admins String[]
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
  password String?
  image   String?
  projects  Project[]
}

