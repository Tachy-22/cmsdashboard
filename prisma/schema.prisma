datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  slug     String    @unique
  title    String
  theme    String
  creator  User?      @relation(fields: [creatorId], references: [id])
  creatorId String?    @db.ObjectId
  admins   String[]
  hero     Hero?
  about    About?
  product Product[]
  contact Contact?
  createdAt String
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
  password String?
  image   String?
  projects  Project[]
  projectIds String[]
}

model Hero {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  button   String
  description String
  project  Project?      @relation(fields: [projectId], references: [id])
  projectId String?    @db.ObjectId @unique
  images    String[]
}

model About {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  description String
  project  Project?     @relation(fields: [projectId], references: [id])
  projectId String?    @db.ObjectId @unique
}

model Product {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  price    String
  name     String
  type     String
  images   String[]
  description String
  project  Project?     @relation(fields: [projectId], references: [id])
  projectId String?    @db.ObjectId @unique
}

model Contact {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  adress String
  location String
  
  project  Project?     @relation(fields: [projectId], references: [id])
  projectId String?    @db.ObjectId @unique
}



